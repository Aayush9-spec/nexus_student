{
  "entities": {
    "User": {
      "title": "User",
      "description": "Represents a user profile in the Nexus 2.0 student marketplace.",
      "type": "object",
      "properties": {
        "uid": { "type": "string", "description": "Unique identifier for the user." },
        "name": { "type": "string", "description": "The user's full name." },
        "email": { "type": "string", "format": "email", "description": "The user's email address." },
        "college": { "type": "string", "description": "The college or university the user attends." },
        "verified": { "type": "boolean", "description": "Indicates if the user is verified." },
        "profileImageURL": { "type": "string", "format": "uri", "description": "URL of the user's profile picture." },
        "bio": { "type": "string", "description": "A short biography of the user." },
        "rating": { "type": "number", "description": "The user's average seller rating." },
        "totalSales": { "type": "number", "description": "Total number of sales made by the user." },
        "sellerLevel": { "type": "string", "description": "Gamified seller level (e.g., Bronze, Silver, Gold)." },
        "xpPoints": { "type": "number", "description": "Experience points for gamification." },
        "badges": { "type": "array", "items": { "type": "string" }, "description": "Array of badges earned by the user." },
        "nexusCredits": { "type": "number", "description": "In-app currency balance." },
        "createdAt": { "type": "string", "format": "date-time", "description": "Timestamp of account creation." }
      },
      "required": ["uid", "name", "email", "college", "verified", "createdAt"]
    },
    "Listing": {
      "title": "Listing",
      "description": "Represents a product or service listing on the marketplace.",
      "type": "object",
      "properties": {
        "listingId": { "type": "string", "description": "Unique identifier for the listing." },
        "sellerId": { "type": "string", "description": "The UID of the user who created the listing." },
        "title": { "type": "string", "description": "The title of the listing." },
        "description": { "type": "string", "description": "A detailed description of the listing." },
        "category": { "type": "string", "description": "The category of the listing." },
        "price": { "type": "number", "description": "The price of the item." },
        "images": { "type": "array", "items": { "type": "string", "format": "uri" }, "description": "An array of image URLs for the listing." },
        "isFeatured": { "type": "boolean", "description": "Indicates if the listing is featured by an admin." },
        "status": { "type": "string", "enum": ["active", "sold", "deleted"], "description": "The status of the listing." },
        "views": { "type": "number", "description": "Number of times the listing has been viewed." },
        "likes": { "type": "number", "description": "Number of likes the listing has received." },
        "collegeTag": { "type": "string", "description": "The college this listing is associated with." },
        "createdAt": { "type": "string", "format": "date-time", "description": "Timestamp of listing creation." }
      },
      "required": ["listingId", "sellerId", "title", "description", "category", "price", "images", "status", "collegeTag", "createdAt"]
    },
    "Chat": {
      "title": "Chat",
      "description": "Represents a single conversation between two or more users.",
      "type": "object",
      "properties": {
        "chatId": { "type": "string", "description": "Unique identifier for the chat." },
        "participants": { "type": "array", "items": { "type": "string" }, "description": "An array of user UIDs participating in the chat." },
        "lastMessage": { "type": "string", "description": "The content of the last message sent in the chat." },
        "updatedAt": { "type": "string", "format": "date-time", "description": "Timestamp of the last message." }
      },
      "required": ["chatId", "participants", "updatedAt"]
    },
    "Message": {
      "title": "Message",
      "description": "Represents a single message within a chat.",
      "type": "object",
      "properties": {
        "messageId": { "type": "string", "description": "Unique identifier for the message." },
        "senderId": { "type": "string", "description": "The UID of the user who sent the message." },
        "text": { "type": "string", "description": "The content of the message." },
        "timestamp": { "type": "string", "format": "date-time", "description": "Timestamp when the message was sent." },
        "isRead": { "type": "boolean", "description": "Indicates if the message has been read." }
      },
      "required": ["messageId", "senderId", "text", "timestamp"]
    },
    "Review": {
      "title": "Review",
      "description": "Represents a review left by a buyer for a seller.",
      "type": "object",
      "properties": {
        "reviewId": { "type": "string", "description": "Unique identifier for the review." },
        "sellerId": { "type": "string", "description": "The UID of the seller being reviewed." },
        "buyerId": { "type": "string", "description": "The UID of the buyer who wrote the review." },
        "rating": { "type": "number", "description": "The rating given (e.g., 1-5 stars)." },
        "comment": { "type": "string", "description": "The text comment of the review." },
        "createdAt": { "type": "string", "format": "date-time", "description": "Timestamp when the review was created." }
      },
      "required": ["reviewId", "sellerId", "buyerId", "rating", "createdAt"]
    },
    "Event": {
      "title": "Event",
      "description": "Represents a campus event.",
      "type": "object",
      "properties": {
        "eventId": { "type": "string", "description": "Unique identifier for the event." },
        "organizerId": { "type": "string", "description": "The UID of the user or group organizing the event." },
        "title": { "type": "string", "description": "The title of the event." },
        "description": { "type": "string", "description": "A detailed description of the event." },
        "location": { "type": "string", "description": "The location of the event." },
        "price": { "type": "number", "description": "The price of a ticket." },
        "ticketsAvailable": { "type": "number", "description": "Number of available tickets." },
        "images": { "type": "array", "items": { "type": "string", "format": "uri" }, "description": "Image URLs for the event." },
        "startDate": { "type": "string", "format": "date-time", "description": "The start date and time of the event." },
        "endDate": { "type": "string", "format": "date-time", "description": "The end date and time of the event." }
      },
      "required": ["eventId", "organizerId", "title", "startDate", "endDate"]
    },
    "CommunityFeedPost": {
      "title": "CommunityFeedPost",
      "description": "Represents a post in the community feed.",
      "type": "object",
      "properties": {
        "postId": { "type": "string", "description": "Unique identifier for the post." },
        "authorId": { "type": "string", "description": "The UID of the user who created the post." },
        "content": { "type": "string", "description": "The text content of the post." },
        "images": { "type": "array", "items": { "type": "string", "format": "uri" }, "description": "Image URLs associated with the post." },
        "upvotes": { "type": "number", "description": "Number of upvotes the post has received." },
        "commentsCount": { "type": "number", "description": "Number of comments on the post." },
        "collegeTag": { "type": "string", "description": "The college this post is associated with." },
        "createdAt": { "type": "string", "format": "date-time", "description": "Timestamp of post creation." }
      },
      "required": ["postId", "authorId", "content", "collegeTag", "createdAt"]
    },
    "Report": {
      "title": "Report",
      "description": "Represents a report filed against a user or listing.",
      "type": "object",
      "properties": {
        "reportId": { "type": "string", "description": "Unique identifier for the report." },
        "reportedUserId": { "type": "string", "description": "The UID of the user being reported." },
        "reason": { "type": "string", "description": "The reason for the report." },
        "description": { "type": "string", "description": "A detailed description of the issue." },
        "status": { "type": "string", "enum": ["pending", "reviewed", "resolved"], "description": "The status of the report." },
        "createdAt": { "type": "string", "format": "date-time", "description": "Timestamp when the report was filed." }
      },
      "required": ["reportId", "reportedUserId", "reason", "status", "createdAt"]
    },
    "Transaction": {
      "title": "Transaction",
      "description": "Represents a payment transaction.",
      "type": "object",
      "properties": {
        "transactionId": { "type": "string", "description": "Unique identifier for the transaction." },
        "buyerId": { "type": "string", "description": "The UID of the buyer." },
        "sellerId": { "type": "string", "description": "The UID of the seller." },
        "listingId": { "type": "string", "description": "The ID of the listing involved in the transaction." },
        "amount": { "type": "number", "description": "The transaction amount." },
        "status": { "type": "string", "enum": ["pending", "completed", "failed", "refunded"], "description": "The status of the transaction." },
        "paymentMethod": { "type": "string", "description": "The payment method used (e.g., 'razorpay', 'stripe', 'nexus_credits')." },
        "createdAt": { "type": "string", "format": "date-time", "description": "Timestamp of the transaction." }
      },
      "required": ["transactionId", "buyerId", "sellerId", "listingId", "amount", "status", "createdAt"]
    }
  },
  "auth": {
    "providers": ["password", "google.com"]
  },
  "firestore": {
    "structure": [
      {
        "path": "/users/{userId}",
        "definition": {
          "entityName": "User",
          "schema": { "$ref": "#/backend/entities/User" },
          "description": "Stores individual user profiles."
        }
      },
      {
        "path": "/listings/{listingId}",
        "definition": {
          "entityName": "Listing",
          "schema": { "$ref": "#/backend/entities/Listing" },
          "description": "Stores all marketplace listings."
        }
      },
      {
        "path": "/chats/{chatId}",
        "definition": {
          "entityName": "Chat",
          "schema": { "$ref": "#/backend/entities/Chat" },
          "description": "Stores metadata for each chat conversation."
        }
      },
      {
        "path": "/chats/{chatId}/messages/{messageId}",
        "definition": {
          "entityName": "Message",
          "schema": { "$ref": "#/backend/entities/Message" },
          "description": "Subcollection storing messages for a specific chat."
        }
      },
      {
        "path": "/reviews/{reviewId}",
        "definition": {
          "entityName": "Review",
          "schema": { "$ref": "#/backend/entities/Review" },
          "description": "Stores all reviews."
        }
      },
      {
        "path": "/events/{eventId}",
        "definition": {
          "entityName": "Event",
          "schema": { "$ref": "#/backend/entities/Event" },
          "description": "Stores all campus events."
        }
      },
      {
        "path": "/communityFeed/{postId}",
        "definition": {
          "entityName": "CommunityFeedPost",
          "schema": { "$ref": "#/backend/entities/CommunityFeedPost" },
          "description": "Stores all posts for the community feed."
        }
      },
      {
        "path": "/reports/{reportId}",
        "definition": {
          "entityName": "Report",
          "schema": { "$ref": "#/backend/entities/Report" },
          "description": "Stores all user-filed reports."
        }
      },
      {
        "path": "/transactions/{transactionId}",
        "definition": {
          "entityName": "Transaction",
          "schema": { "$ref": "#/backend/entities/Transaction" },
          "description": "Stores all payment transactions."
        }
      }
    ]
  }
}

    