/**
 * @file Firestore Security Rules
 * @description This ruleset enforces a strict user-ownership model for user profiles and a combination of ownership and shared access for other data.
 *
 * Data Structure:
 * - /users/{userId}: Stores user profiles, accessible only to the user themselves.
 * - /listings/{listingId}: Stores listings, with owner-based write access and public read access.
 * - /chats/{chatId}: Stores chat metadata, accessible to participants only.
 * - /chats/{chatId}/messages/{messageId}: Stores messages within chats, accessible to chat participants only.
 * - /reviews/{reviewId}: Stores reviews, writable by the buyer and readable by everyone.
 * - /events/{eventId}: Stores event information, writable by the organizer and readable by everyone.
 * - /community_feed/{postId}: Stores community feed posts, writable by the author, and readable by everyone.
 * - /reports/{reportId}: Stores reports, only writable.
 * - /transactions/{transactionId}: Stores transaction information, only writable.
 * - /roles_admin/{userId}: Stores admin roles, managed via document existence.
 *
 * Key Security Decisions:
 * - Users can only read and write their own profile data.
 * - Listings and Community Feed posts are publicly readable but owner-writable.
 * - Chats and Messages are only accessible to participating users.
 * - Listing is not listable by non admins.
 * - Global admin roles are managed via document existence in the `/roles_admin` collection.
 *
 * Denormalization for Authorization:
 * - Listings include `sellerId` to enable owner-based access control without additional reads.
 * - Chats include a `participants` array to define authorized users directly within the document.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Controls access to user profile data.
     * @path /users/{userId}
     * @allow (get, create, update, delete, list) for the owner of the profile.
     * @deny (get, create, update, delete, list) for all other users.
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return isSignedIn() && request.auth.uid == userId;
      }

      allow get: if isOwner(userId);
      allow list: if false;
      allow create: if isSignedIn() && request.auth.uid == userId;
      allow update: if isOwner(userId) && request.auth.uid == userId;
      allow delete: if isOwner(userId);
    }

    /**
     * @description Controls access to listing data.
     * @path /listings/{listingId}
     * @allow (get, list) for all users (public read).
     * @allow (create) only if the sellerId in the request matches the authenticated user's ID.
     * @allow (update, delete) only for the owner of the listing.
     * @deny (create, update, delete) for non-owners.
     * @principle Allows public read access with owner-only writes.
     */
    match /listings/{listingId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner() {
        return isSignedIn() && resource.data.sellerId == request.auth.uid;
      }

      allow get: if true;
      allow list: if false; // Listing is not listable.

      allow create: if isSignedIn() && request.resource.data.sellerId == request.auth.uid;
      allow update: if isOwner();
      allow delete: if isOwner();
    }

    /**
     * @description Controls access to chat data.
     * @path /chats/{chatId}
     * @allow (get, list, create, update, delete) for participants of the chat.
     * @deny (get, list, create, update, delete) for non-participants.
     * @principle Enforces shared access based on the 'participants' array.
     */
    match /chats/{chatId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isParticipant() {
        return isSignedIn() && request.resource.data.participants.hasAny([request.auth.uid]);
      }
      
      function isExistingParticipant() {
          return isSignedIn() && resource.data.participants.hasAny([request.auth.uid]);
      }

      allow get: if isExistingParticipant();
      allow list: if false; // Listing is not listable.
      allow create: if isParticipant();
      allow update: if isExistingParticipant();
      allow delete: if false; // Deny delete, data should not be deleted by end users
    }

    /**
     * @description Controls access to messages within a chat.
     * @path /chats/{chatId}/messages/{messageId}
     * @allow (get, list, create, update, delete) for participants of the parent chat.
     * @deny (get, list, create, update, delete) for non-participants.
     * @principle Enforces shared access based on the parent chat's 'participants' array.
     */
    match /chats/{chatId}/messages/{messageId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isChatParticipant(chatId) {
        return isSignedIn() && get(/databases/$(database)/documents/chats/$(chatId)).data.participants.hasAny([request.auth.uid]);
      }

      allow get: if isChatParticipant(chatId);
      allow list: if isChatParticipant(chatId);
      allow create: if isChatParticipant(chatId);
      allow update: if false;
      allow delete: if false; // Messages should not be deleted by end users
    }

    /**
     * @description Controls access to review data.
     * @path /reviews/{reviewId}
     * @allow (get, list) for all users.
     * @allow (create) only if the buyerId in the request matches the authenticated user's ID.
     * @allow (update, delete) never.
     */
    match /reviews/{reviewId} {
      function isSignedIn() {
        return request.auth != null;
      }

      allow get: if true;
      allow list: if true;
      allow create: if isSignedIn() && request.resource.data.buyerId == request.auth.uid;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Controls access to event data.
     * @path /events/{eventId}
     * @allow (get, list) for all users.
     * @allow (create) only if the organizerId in the request matches the authenticated user's ID.
     * @allow (update, delete) only for the organizer of the event.
     */
    match /events/{eventId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOrganizer() {
        return isSignedIn() && resource.data.organizerId == request.auth.uid;
      }

      allow get: if true;
      allow list: if true;
      allow create: if isSignedIn() && request.resource.data.organizerId == request.auth.uid;
      allow update: if isOrganizer();
      allow delete: if isOrganizer();
    }

    /**
     * @description Controls access to community feed post data.
     * @path /community_feed/{postId}
     * @allow (get, list) for all users.
     * @allow (create) only if the authorId in the request matches the authenticated user's ID.
     * @allow (update, delete) only for the author of the post.
     */
    match /community_feed/{postId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isAuthor() {
        return isSignedIn() && resource.data.authorId == request.auth.uid;
      }

      allow get: if true;
      allow list: if true;
      allow create: if isSignedIn() && request.resource.data.authorId == request.auth.uid;
      allow update: if isAuthor();
      allow delete: if isAuthor();
    }

    /**
     * @description Controls access to report data.
     * @path /reports/{reportId}
     * @allow create for any signed-in user.
     * @deny get, list, update, delete for all users.
     */
    match /reports/{reportId} {
      function isSignedIn() {
        return request.auth != null;
      }

      allow get: if false;
      allow list: if false;
      allow create: if isSignedIn();
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Controls access to transaction data.
     * @path /transactions/{transactionId}
     * @allow create for any signed-in user.
     * @deny get, list, update, delete for all users.
     */
    match /transactions/{transactionId} {
      function isSignedIn() {
        return request.auth != null;
      }

      allow get: if false;
      allow list: if false;
      allow create: if isSignedIn();
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Controls access to admin role data.
     * @path /roles_admin/{userId}
     * @allow get, create, delete only for the admin themselves.
     * @deny list, update for all users.
     */
    match /roles_admin/{userId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return isSignedIn() && request.auth.uid == userId;
      }

      allow get: if isOwner(userId);
      allow list: if false;
      allow create: if isSignedIn() && request.auth.uid == userId;
      allow update: if false;
      allow delete: if isOwner(userId);
    }
  }
}