/**
 * @fileoverview Firestore Security Rules for Nexus Student Marketplace.
 *
 * Core Philosophy:
 * This ruleset enforces a user-ownership model for user profiles and restricts
 * write access to specific users. Listings, transactions, reviews, and chat
 * messages are organized into separate collections with appropriate access
 * controls.
 *
 * Data Structure:
 * - /users/{userId}: Stores user profiles.
 * - /listings/{listingId}: Stores listings.
 * - /transactions/{transactionId}: Stores transaction data.
 * - /reviews/{reviewId}: Stores reviews.
 * - /messages/{messageId}: Stores chat messages.
 *
 * Key Security Decisions:
 * - Users can only read and write their own profile data.
 * - Listing writes are open but require sellerId to match the authenticated user ID.
 * - Transactions and reviews have open reads, and only authenticated users can create.
 * - Messages have open reads, and only authenticated users can create.
 *
 * Denormalization for Authorization:
 * The 'sellerId' is denormalized into the Listing document to avoid costly
 * `get()` calls and enable atomic authorization.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Controls access to user profile documents.
     * @path /users/{userId}
     * @allow (get, list) User can read their own profile.
     * @allow (create, update, delete) User can create, update, and delete their own profile.
     * @deny (get, list) User cannot read other user profiles.
     * @deny (create, update, delete) User cannot modify other user profiles.
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      allow get: if isSignedIn() && isOwner(userId);
      allow list: if isSignedIn() && isOwner(userId);
      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isSignedIn() && isExistingOwner(userId);
      allow delete: if isSignedIn() && isExistingOwner(userId);
    }

    /**
     * @description Controls access to listing documents.
     * @path /listings/{listingId}
     * @allow (get, list) Anyone can read listings.
     * @allow (create) User can create a listing if sellerId matches their UID.
     * @allow (update, delete) User can update/delete a listing if they are the owner (sellerId).
     * @deny (create) User cannot create a listing with a mismatched sellerId.
     * @deny (update, delete) User cannot update/delete listings they don't own.
     * @principle Allows public read access but restricts write access to the owner.
     */
    match /listings/{listingId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner() {
        return resource.data.sellerId == request.auth.uid;
      }

      function isCreatingWithOwnerId() {
        return request.resource.data.sellerId == request.auth.uid;
      }

      function isExistingOwner() {
        return isOwner() && resource != null;
      }
      
      allow get: if true;
      allow list: if true;
      allow create: if isSignedIn() && isCreatingWithOwnerId();
      allow update: if isSignedIn() && isExistingOwner();
      allow delete: if isSignedIn() && isExistingOwner();
    }

    /**
     * @description Controls access to transaction documents.
     * @path /transactions/{transactionId}
     * @allow (get, list) Anyone can read transactions.
     * @allow (create) Authenticated user can create transactions.
     * @deny (update, delete) No one can update or delete transactions.
     * @principle Allows public read access and restricts writes to authenticated users.
     */
    match /transactions/{transactionId} {
      function isSignedIn() {
        return request.auth != null;
      }

      allow get: if true;
      allow list: if true;
      allow create: if isSignedIn();
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Controls access to review documents.
     * @path /reviews/{reviewId}
     * @allow (get, list) Anyone can read reviews.
     * @allow (create) Authenticated user can create reviews.
     * @deny (update, delete) No one can update or delete reviews.
     * @principle Allows public read access and restricts writes to authenticated users.
     */
    match /reviews/{reviewId} {
      function isSignedIn() {
        return request.auth != null;
      }

      allow get: if true;
      allow list: if true;
      allow create: if isSignedIn();
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Controls access to chat message documents.
     * @path /messages/{messageId}
     * @allow (get, list) Anyone can read messages.
     * @allow (create) Authenticated user can create messages.
     * @deny (update, delete) No one can update or delete messages.
     * @principle Allows public read access and restricts writes to authenticated users.
     */
    match /messages/{messageId} {
      function isSignedIn() {
        return request.auth != null;
      }

      allow get: if true;
      allow list: if true;
      allow create: if isSignedIn();
      allow update: if false;
      allow delete: if false;
    }
  }
}